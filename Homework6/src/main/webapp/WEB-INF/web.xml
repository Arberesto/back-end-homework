<?xml version="1.0"?>
<web-app>
    <servlet>
        <servlet-name>authorizationServlet</servlet-name>
        <servlet-class>it.sevenbits.homework6.AuthorizationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>tasksCreateAndViewServlet</servlet-name>
        <servlet-class>it.sevenbits.homework6.TasksCreateAndViewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>taskGetAndDeleteServlet</servlet-name>
        <servlet-class>it.sevenbits.homework6.TaskGetAndDeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>authorizationServlet</servlet-name>
        <url-pattern>/auth</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>tasksCreateAndViewServlet</servlet-name>
        <url-pattern>/tasks</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>taskGetAndDeleteServlet</servlet-name>
        <url-pattern>/task</url-pattern>
    </servlet-mapping>
</web-app>